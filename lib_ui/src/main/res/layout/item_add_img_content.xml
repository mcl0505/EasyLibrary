<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:clipChildren="false">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_push_share_imageview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="5dp"
            app:layout_constraintDimensionRatio="1:1"
            />

        <ImageView
            android:id="@+id/item_push_share_img_cancel"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="10dp"
            android:src="@mipmap/icon_add_img_close"
            app:layout_constraintEnd_toEndOf="@id/item_push_share_imageview"
            app:layout_constraintTop_toTopOf="@id/item_push_share_imageview" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
